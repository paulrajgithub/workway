<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"

    app:layout_columnWeight="1"
    app:layout_rowWeight="1"

    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/course_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"

        android:background="@drawable/circle"
        android:foregroundGravity="right|top"

        android:scaleType="centerInside"
        android:tint="#FFF"

        android:padding="10dp"

        android:contentDescription="@string/content_desc_course" />

    <TextView
        android:id="@+id/course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="6dp"

        style="@style/AppTheme.TextAppearance.Normal.Secondary"
        android:text="@string/text_course_title"
        android:gravity="center"
        />
</LinearLayout>